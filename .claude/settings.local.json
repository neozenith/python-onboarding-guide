{
  "permissions": {
    "allow": [
      "Bash(curl:*)",
      "Bash(ls:*)",
      "Bash(npm install:*)",
      "Bash(npm run build:*)",
      "Bash(npm test)",
      "Bash(npm test:*)",
      "Bash(npx playwright test:*)",
      "Bash(npx tsc:*)",
      "Bash(pgrep:*)",
      "Bash(pnpm build:*)",
      "Bash(pnpm exec playwright test:*)",
      "Bash(pnpm test:*)",
      "mcp__iconify",
      "mcp__playwright",
      "mcp__context7",
      "mcp__sequential-thinking__sequentialthinking",
      "Bash(jq:*)",
      "Bash(grep:*)",
      "Bash(mkdir:*)",
      "WebFetch(domain:docs.anthropic.com)",
      "Bash(ps:*)",
      "Bash(uv run:*)",
      "WebSearch",
      "Bash(duckdb:*)",
      "Bash(uvx ruff format:*)",
      "Bash(sqlite3:*)",
      "Bash(claude -p :*",
      "Bash(uv run claude-observer:*)",
      "Bash(uv add:*)",
      "mcp__ide__getDiagnostics"
    ],
    "deny": [
      "Read(.env)",
      "Bash(timeout:*)",
      "Bash(python:*)",
      "Bash(python3:*)",
      "Bash(uv run python -c :*)",
      "Bash(uv run python3 -c :*)",
      "Bash(rm:*)",
      "Bash(PYTHONPATH=:*)"
    ],
    "defaultMode": "acceptEdits"
  },
  "hooks": {
    "Notification": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "uv run $(git rev-parse --show-toplevel)/.claude/hooks/hogger.py"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "uv run $(git rev-parse --show-toplevel)/.claude/hooks/hogger.py"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "uv run $(git rev-parse --show-toplevel)/.claude/hooks/hogger.py"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "uv run $(git rev-parse --show-toplevel)/.claude/hooks/hogger.py"
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "uv run $(git rev-parse --show-toplevel)/.claude/hooks/hogger.py"
          }
        ]
      }
    ]
  }
}